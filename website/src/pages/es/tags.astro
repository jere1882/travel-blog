---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

let allTrips;
try {
  allTrips = await getCollection('trips_es');
  if (allTrips.length === 0) allTrips = await getCollection('trips');
} catch {
  allTrips = await getCollection('trips');
}

allTrips = allTrips.filter(trip => trip.data.publish !== false);

// Collect all tags with counts
const tagCounts: Record<string, number> = {};
allTrips.forEach(trip => {
  const tags = trip.data.tags || [];
  tags.forEach(tag => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

// Sort by count (descending) then alphabetically
const sortedTags = Object.entries(tagCounts).sort((a, b) => {
  if (b[1] !== a[1]) return b[1] - a[1];
  return a[0].localeCompare(b[0]);
});
---

<BaseLayout title="Todas las Etiquetas | CrÃ³nicas Viajeras" lang="es">
  <div class="container">
    <section class="site-title">
      <h1>Todas las Etiquetas</h1>
      <p class="tagline">{sortedTags.length} etiquetas</p>
    </section>

    <div class="tags-grid">
      {sortedTags.map(([tag, count]) => (
        <a href={`/es/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag-card">
          <span class="tag-name">{tag.replace(/_/g, ' ')}</span>
          <span class="tag-count">{count} viaje{count > 1 ? 's' : ''}</span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .tags-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1rem;
    margin-bottom: var(--section-spacing);
  }
  
  .tag-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 1rem;
    background: #f5f5f0;
    border: 1px solid #e5e5e0;
    border-radius: 4px;
    transition: all 0.2s ease;
    text-align: center;
  }
  
  .tag-card:hover {
    background: #c5a47e;
    border-color: #c5a47e;
    transform: translateY(-2px);
  }
  
  .tag-name {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666;
    margin-bottom: 0.25rem;
  }
  
  .tag-card:hover .tag-name { color: #fff; }
  
  .tag-count {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: #999;
  }
  
  .tag-card:hover .tag-count { color: rgba(255,255,255,0.8); }
</style>

